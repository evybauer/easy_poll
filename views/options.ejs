  <%- include('./partials/header'); %>

  <body>
      <form action="/shortid" method="POST">
          <div class="form-group">
              <h2 class="poll-page-text"> Question: <%= params[0].title %></h2>
            </div>

            <div class="form-group">
                <h3 class="poll-page-text"> Description: <%= params[0].polls_description %></h3>
              </div><br><br>

            <div class="form-group">
            <h4>Options</h4>
            </div>

            <ul id="list" class="list-group">
                <% for (const options of params) { %>
                <li name="<%= options.id %>" class="list-group-item active"><span class="glyphicon glyphicon-move my-handle" aria-hidden="true"></span><%= `${options.choice}`%><br><%= `${options.description}`%></li><br>
              <% } %>
            </ul>

          <div class="form-group">
              <button class="btn btn-outline-success btn-lg btn-block" type="submit">Vote!</button>
            </div>

          </form>
  </body>
